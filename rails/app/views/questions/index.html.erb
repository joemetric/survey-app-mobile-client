<h1>Listing questions in <%= @campaign.name %></h1>

<table>
  <tr>
    <th>Text</th>
  </tr>

<% for question in @questions %>
  <tr>
    <td><%=h question.text %></td>
    <td><%= link_to 'Show', [@campaign, question] %></td>
    <td><%= link_to 'Edit', edit_campaign_question_path(@campaign, question) %></td>
    <td><%= link_to 'Destroy', [@campaign, question], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New question', new_campaign_question_path(@campaign) %> |
<%= link_to "Back to #{@campaign.name}", @campaign %>
